<section class="app" id="appRoot">
  <div class="container-fluid">
    <div class="row">
      <div class="col col-sm-12 col-md-8 offset-md-2 col-lg-6 offset-lg-0 px-lg-0 col-xl-5">
        <div class="app__col app__col--left">
          <div class="app__header">
            <div class="text-center text-lg-left">
              <%= svg('uoko_logo') %>
            </div>
          </div>
